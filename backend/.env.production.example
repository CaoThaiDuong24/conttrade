# Backend Environment Variables for Production

# Copy this file to backend/.env.production and fill in your production values

# Server
NODE_ENV=production
PORT=3006
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://username:password@host:5432/database_name?schema=public

# Security
JWT_SECRET=generate-a-secure-random-jwt-secret-here
SESSION_SECRET=generate-a-secure-random-session-secret-here

# CORS
CORS_ORIGIN=https://your-domain.com

# Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info
